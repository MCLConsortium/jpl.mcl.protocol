<html xmlns='http://www.w3.org/1999/xhtml'
    xml:lang='en'
    lang='en'
    xmlns:tal='http://xml.zope.org/namespaces/tal'
    xmlns:metal='http://xml.zope.org/namespaces/metal'
    xmlns:i18n='http://xml.zope.org/namespaces/i18n'
    metal:use-macro='context/main_template/macros/master'
    i18n:domain='jpl.mc.protocol'>
    <head>
        <title>Protocol Folder</title>
    </head>
    <body>
        <metal:main fill-slot='content-core' metal:define-macro='content-core'>
            <tal:main-macro metal:define-macro='content-core'
                tal:define='
                    contents       view/protocols;
                    subfolders     view/subfolders;
                    kssClassesView context/@@kss_field_decorator_view;
                    getKssClasses  nocall:kssClassesView/getKssClassesInlineEditable;
                    templateId     template/getId;
                    Batch          python:modules["Products.CMFPlone"].Batch;
                    b_size         python:30;
                    b_start        python:0;
                    b_start        request/b_start|b_start;
                '>
           
                <div tal:condition='subfolders' tal:omit-tag=''>
                    <f3 i18n:translate='protocolFolder_subfolders'>Subfolders in this Folder</f3>
                    <ul>
                       <li tal:repeat='subfolder subfolders'>
                            <a href='#' title='Scintilating sub-folders exposed!' tal:content='subfolder/title'
                                tal:attributes='href subfolder/url; title subfolder/description'>
                                Sub-Protocol Action Folder
                            </a>
                       </li> 
                    </ul>
                </div>

                <p tal:condition='not:contents' i18n:translate='protocolFolder_noProtocols' class='discreet'>
                    There are currently no protocols in this folder.
                </p>
                <div tal:define='batch python:Batch(contents, b_size, int(b_start), orphan=1);'
                    tal:omit-tag=''>
                    <table class='listing'>
                        <thead>
                            <tr>
                                <th i18n:translate='protocolFolder_titleHeading'>Title</th>
                                <th i18n:translate='protocolFolder_abstractHeading'>Abstract</th>
                                <th i18n:translate='protocolFolder_piHeading'>Investigator</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tal:row repeat='item batch'>
                                <tal:def define='url item/url; description item/description; title item/title;
                                    oddrow repeat/item/odd; piName item/piName; piURL item/piURL;'>
                                    <tr tal:attributes='class python:oddrow and "odd" or "even";'>
                                        <td>
                                            <a href='#' title='A questionable protocol of ill repute.' tal:content='title'
                                                tal:attributes='href url; title description;'> 
                                                Slimiest Protocol Ever
                                            </a>
                                        </td>
                                        <td tal:content='description'>
                                            Lorem ipsum etc.
                                        </td>
                                        <td>
                                            <a href='#' tal:condition='python:piURL and piName' tal:attributes='href piURL'
                                                tal:content='piName'>
                                                Joe Smellbucket
                                            </a>
                                            <a href='#' tal:condition='python:piURL and not piName' tal:attributes='href piURL'
                                                i18n:translate='protocolFolder_unknownPIbutKnownURL'>
                                                Unnamed
                                            </a>
                                            <span tal:condition='python:not piURL and piName' tal:content='piName'>
                                                Joe Smellbucket
                                            </span>
                                            <span class='discreet' tal:condition='python:not piURL and not piName'
                                                i18n:translate='protocolFolder_unknownPIandURL'>
                                                Not listed
                                            </span>
                                        </td>
                                    </tr>
                                </tal:def>
                            </tal:row>
                        </tbody>
                    </table>
                    <div metal:use-macro='context/batch_macros/macros/navigation'>Navigation here.</div>
                </div>
            </tal:main-macro>
        </metal:main>
    </body>
</html>
